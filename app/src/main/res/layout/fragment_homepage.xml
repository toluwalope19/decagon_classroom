<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:paddingLeft="48dp"
        android:paddingRight="42dp"
        android:paddingTop="25dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="25dp"
            android:background="@color/secondaryColor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03357664" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.001" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.08" />

        <ImageView
            android:id="@+id/progress_mon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/checked"
            android:src="@drawable/circle"
            android:contentDescription="monday"
            app:layout_constraintTop_toBottomOf="@id/guideline3"
            app:layout_constraintLeft_toRightOf="@id/guideline"
            app:layout_constraintBottom_toTopOf="@id/guideline4"
            tools:layout_editor_absoluteX="16dp" />

        <ImageView
            android:id="@+id/progress_tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:src="@drawable/current"
            app:layout_constraintTop_toBottomOf="@id/guideline3"
            app:layout_constraintBottom_toTopOf="@id/guideline4"
            app:layout_constraintLeft_toRightOf="@id/progress_mon" />

        <ImageView
            android:id="@+id/progress_wed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/goal"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toBottomOf="@id/guideline3"
            app:layout_constraintLeft_toRightOf="@id/progress_tuesday"
            app:layout_constraintBottom_toTopOf="@id/guideline4"
            tools:layout_editor_absoluteX="138dp" />

        <ImageView
            android:id="@+id/progress_thur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/goal"
            android:layout_marginLeft="30dp"
            app:layout_constraintLeft_toRightOf="@id/progress_wed"
            app:layout_constraintTop_toBottomOf="@id/guideline3"
            app:layout_constraintBottom_toTopOf="@id/guideline4"
            tools:layout_editor_absoluteX="208dp" />

        <ImageView
            android:id="@+id/progress_fri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/goal"
            app:layout_constraintLeft_toRightOf="@id/progress_thur"
            android:layout_marginLeft="29dp"
            app:layout_constraintTop_toBottomOf="@id/guideline3"
            app:layout_constraintBottom_toTopOf="@id/guideline4"
            tools:layout_editor_absoluteX="278dp"
            tools:layout_editor_absoluteY="-1dp" />

        <TextView
            android:id="@+id/Mon_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@id/progress_mon"
            app:layout_constraintLeft_toRightOf="@id/guideline"
            tools:layout_editor_absoluteX="25dp"
            android:layout_marginLeft="5dp"
            tools:layout_editor_absoluteY="50dp" />

        <TextView
            android:id="@+id/Tue_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tue"
            android:layout_marginLeft="47dp"
            android:textSize="12dp"
            app:layout_constraintLeft_toRightOf="@id/Mon_text"
            app:layout_constraintTop_toBottomOf="@id/progress_tuesday"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="50dp" />

        <TextView
            android:id="@+id/Wed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wed"
            android:layout_marginLeft="50dp"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@id/progress_wed"
            app:layout_constraintLeft_toRightOf="@id/Tue_text"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="50dp" />

        <TextView
            android:id="@+id/Thur_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thur"
            android:textSize="12dp"
            app:layout_constraintLeft_toRightOf="@id/Wed_text"
            android:layout_marginLeft="44dp"
            app:layout_constraintTop_toBottomOf="@id/progress_thur"
            tools:layout_editor_absoluteX="209dp"
            tools:layout_editor_absoluteY="52dp" />

        <TextView
            android:id="@+id/Fri_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fri"
            android:textSize="12dp"
            android:layout_marginLeft="49dp"
            app:layout_constraintTop_toBottomOf="@id/progress_fri"
            app:layout_constraintLeft_toRightOf="@id/Thur_text"
            tools:layout_editor_absoluteX="275dp"
            tools:layout_editor_absoluteY="50dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:weightSum="7"
            app:layout_constraintTop_toBottomOf="@id/guideline4"
            app:layout_constraintLeft_toRightOf="@id/guideline">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/date"
                    android:contentDescription="calendar"
                    android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="8dp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/current_date_day"
                    android:layout_width="wrap_content"
                    android:textSize="12dp"
                    android:layout_height="wrap_content"
                    android:text="18"/>
                <TextView
                    android:id="@+id/current_date_month"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apr 2019"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="18dp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/current_topic"
                    android:layout_width="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/errorColor"
                    android:layout_height="wrap_content"
                    android:text="REACT"/>
                <TextView
                    android:id="@+id/current_subTopic"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Introduction to React Hooks"/>


            </LinearLayout>



        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>







</LinearLayout>